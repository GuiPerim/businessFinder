{% extends 'base.html.twig' %}

{% block title %}Business Finder{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Business Finder Admin</h1>
        <a href="{{ path('admin/new') }}" class="btn btn-sm btn-primary">Add Business</a>
        <br>
        <br>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message|raw }}
                </div><br/>
            {% endfor %}
        {% endfor %}

        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for row in business %}
                <tr>
                    <td>{{ row.title }}</td>
                    <td>{{ row.phone }}</td>
                    <td>{{ row.address }} {{ row.city }}/{{ row.state }}</td>
                    <td><a onclick="return confirm('Are you sure to delete?')" href="{{ path('delete', { 'id': row.id }) }}" type="button" class="btn btn-sm btn-danger">Delete</a></td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}
